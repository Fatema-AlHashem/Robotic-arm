        "def minimax(board ,depth,isMaximizing):\n",
        "  result=checkWinner()\n",
        "if result is not None:\n",
        "  return score= scores[result]\n",
        "\n",
        "\n",
        "\n",
        "\n",
        "if (isMaximizing):\n",
        "    BestScore=float(-inf)\n",
        "     for i in range(3):\n",
        "         for j in range(3):\n",
        "            if (board[i][j]==''):\n",
        "                board[i][j]=ai\n",
        "                score=minimax(board,depth+1,false)\n",
        "                board[i][j]=''\n",
        "                BestScore=max(score,BestScore)\n",
        "\n",
        "\n",
        "\n",
        "\n",
        "\n",
        "        return BestScore\n",
        "\n",
        "\n",
        "\n",
        "\n",
        "else:\n",
        "    BestScore=float('inf')\n",
        "       for i in range (3):\n",
        "        for j in range (3):\n",
        "            if (board[i][j]==''):\n",
        "                board[i][j]=human\n",
        "                score=minimax(board,depth+1,true)\n",
        "                board[i][j]=''\n",
        "                BestScore=min(score,BestScore)\n",
        "\n",
        "\n",
        "\n",
        "\n",
        "\n",
        "\n",
        "\n",
        "        return BestScore\n",
        "\n",
        "\n",
        "\n",
